# LYNX Environment Configuration

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Microsoft OneLake/Fabric Configuration
ONELAKE_CONNECTION_STRING=your_onelake_connection_string
FABRIC_WORKSPACE_ID=your_fabric_workspace_id
FABRIC_DATASET_ID=your_fabric_dataset_id

# Azure Data Lake Storage Gen2 Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_azure_storage_account_name
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Infura API Configuration (Primary Blockchain Provider)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_API_KEY=your_infura_api_key_here

# Infura Endpoints for Different Blockchains
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id_here
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/your_infura_project_id_here

# Polygon (MATIC)
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id_here
POLYGON_WS_URL=wss://polygon-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Binance Smart Chain (BSC)
BSC_RPC_URL=https://bsc-mainnet.infura.io/v3/your_infura_project_id_here
BSC_WS_URL=wss://bsc-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Avalanche (AVAX)
AVALANCHE_RPC_URL=https://avalanche-mainnet.infura.io/v3/your_infura_project_id_here
AVALANCHE_WS_URL=wss://avalanche-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Arbitrum One
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your_infura_project_id_here
ARBITRUM_WS_URL=wss://arbitrum-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Optimism
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/your_infura_project_id_here
OPTIMISM_WS_URL=wss://optimism-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Base
BASE_RPC_URL=https://base-mainnet.infura.io/v3/your_infura_project_id_here
BASE_WS_URL=wss://base-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Linea
LINEA_RPC_URL=https://linea-mainnet.infura.io/v3/your_infura_project_id_here
LINEA_WS_URL=wss://linea-mainnet.infura.io/ws/v3/your_infura_project_id_here

# Blockchain API Keys (for transaction history and additional data)
ETHERSCAN_API_KEY=your_etherscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
SNOWTRACE_API_KEY=your_snowtrace_api_key

# Bitcoin (using BTCScan instead of BlockCypher)
BTCSCAN_API_URL=https://btcscan.org/api
BLOCKCYPHER_API_KEY=your_blockcypher_api_key

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLSCAN_API_KEY=your_solscan_api_key

# AI/ML Configuration
AI_MODEL_ENDPOINT=your_ai_model_endpoint
AI_API_KEY=your_ai_api_key

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (if using additional database)
DATABASE_URL=your_database_url

# Redis (for caching)
REDIS_URL=your_redis_url

# Monitoring
SENTRY_DSN=your_sentry_dsn 